{{> organisms-header }}
<main role="main">
	<div class="l-container">
		{{> molecules-page-header }}
	</div>

	<div class="l-container">
		<div class="l-page-layout l-page-layout--two-column">

			<div class="l-page-layout__main">
				{{# featureImage }}
				<img src="{{ src }}" alt="{{ alt }}" />
				{{/ featureImage }}
			</div><!--end .l-main-->

			<div class="l-page-layout__secondary">
				<div class="l-linelength-container">
					{{> organisms-text-passage }}
				</div>
				{{# priceSection }}
				<span class="c-price">{{ label }}</span>
				{{/ priceSection }}
				{{> molecules-select-field }}
				{{# addToCart }}
				{{> molecules-button }}
				{{/ addToCart }}
			</div><!--end .l-sidebar-->

		</div><!--end l--two-col-->
	</div>

</main>
{{> organisms-footer }}
